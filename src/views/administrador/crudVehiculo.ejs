<% include ../layouts/header %>


<div class="container">
    <section class="content-header">
        <h4>
            Gestionar Vehiculo
        </h4>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li class="active">Gestor Vehiculo</li>
        </ol>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-header">
             <button class="btn btn-primary" data-toggle="modal" data-target="#modalAgregarVehiculo" id="agregarVehiculo">
                    Agregar Vehiculo 
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
             </button>
             
<!--===========================================================
	MODAL PARA AGREGAR CONDUCTOR
============================================================-->
             <% include ../modals/modalAgregarVehiculo %>
            </div>
            

            <div class="box-body table-responsive">
                <table class="table table-bordered table-striped dt-responsive tablaProductos" width="100%">
                    <thead>
                    <tr>
                        <th style="width:10px">#</th>
                        <th>PLACA</th>
                        <th>RUAT</th>
                        <th>MODELO</th>
                        <th>MARCA</th>
                        <th>COLOR</th>
                        <th>ID CONDUCTOR</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% if (data) { -%>
                            <% for (var i = 0; i < data.length; i++) { -%>
                                <tr >
                                    <td> <%= data[i].id %> </td>
                                    <td> <%= data[i].placa %> </td>
                                    <td> <%= data[i].ruat %> </td>
                                    <td> <%= data[i].modelo %> </td>
                                    <td> <%= data[i].marca %> </td>
                                    <td> <%= data[i].color %> </td>
                                    <td> <%= data[i].id_conductor %> </td>
                                    <td> 
                                            <a href="#" class="btn btn-success">editar</a>

                                             <a href="#" class="btn btn-danger">eliminar</a>
                                        
                                        
                                    </td>
                                </tr>
                            <% } -%>
                        <% } -%>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<script src="/js/gestionarVehiculo.js"></script>
<% include ../layouts/footer %> 